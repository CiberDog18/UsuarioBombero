<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoBomberosActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="4dp"
            app:shape_arc_cropDirection="outside"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textViewNameBookingDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMACION"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="50dp" />


        </com.github.florent37.shapeofview.shapes.ArcView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Contacto:"
                android:layout_marginRight="40dp"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <TableRow
                    android:paddingBottom="20dp"
                    >
                    <ImageView
                        android:layout_column="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_user">

                    </ImageView>

                    <TextView
                        android:layout_column="2"
                        android:textAlignment="textStart"
                        android:text="Comandante"
                        android:textColor="@color/colorBlack"
                        android:padding="3dip"
                        android:textSize="18sp" />


                    <TextView

                        android:layout_column="3"
                        android:padding="3dip"
                        android:text="Wilson Velasquez MuÃ±oz"
                        android:textAlignment="textStart"
                        android:textSize="18sp" />


                </TableRow>

                <TableRow
                    android:paddingBottom="20dp"
                    >
                    <ImageView
                        android:layout_column="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_phone">

                    </ImageView>


                    <TextView
                        android:layout_column="2"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="textStart"
                        android:text="Telefono"
                        android:padding="3dip"
                        android:textSize="20sp" />


                    <TextView

                        android:layout_column="3"
                        android:padding="3dip"
                        android:text="7243417"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />


                </TableRow>
                <TableRow
                    android:paddingBottom="20dp"
                    >

                    <ImageView
                        android:layout_column="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_smartphone">

                    </ImageView>
                    <TextView
                        android:layout_column="2"
                        android:textAlignment="textStart"
                        android:text="Celular"
                        android:padding="3dip"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <TextView

                        android:layout_column="3"
                        android:padding="3dip"
                        android:textAlignment="textStart"
                        android:text="3158557332"
                        android:textSize="20sp" />

                </TableRow>
                <TableRow
                    android:paddingBottom="20dp">
                    <ImageView
                        android:layout_column="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_email">

                    </ImageView>
                    <TextView
                        android:layout_column="2"
                        android:textAlignment="textStart"
                        android:text="Email"
                        android:textColor="@color/colorBlack"
                        android:padding="3dip"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_column="3"
                        android:padding="3dip"
                        android:textAlignment="textStart"
                        android:text="bomberossangil@hotmail.com"
                        android:textSize="18sp" />

                </TableRow>




            </TableLayout>

        </LinearLayout>







    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageMap"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image_info"
        android:layout_gravity="center|top"
        app:civ_border_width="5dp"
        app:civ_border_color="#F0F0F0"
        android:layout_marginTop="120dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageBack2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back_black"
        android:layout_gravity="left|top"
        app:civ_circle_background_color="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>